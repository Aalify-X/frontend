{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "templates/**",
                    "static/**",
                    "app.py",
                    "requirements.txt"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "wsgi.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_DEBUG": "false"
    }
}
